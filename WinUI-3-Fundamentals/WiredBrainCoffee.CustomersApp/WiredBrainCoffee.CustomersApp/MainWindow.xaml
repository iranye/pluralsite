<Window
    x:Class="WiredBrainCoffee.CustomersApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WiredBrainCoffee.CustomersApp.Controls"
    xmlns:vm="using:WiredBrainCoffee.CustomersApp.ViewModel"
    mc:Ignorable="d">
    <Grid x:Name="root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.Resources>
            <DataTemplate x:Key="CustomerDataTemplate"
                          x:DataType="vm:CustomerItemViewModel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Bind FirstName,Mode=OneWay}"/>
                    <TextBlock Text="{x:Bind LastName,Mode=OneWay}" Margin="5 0 0 0" FontWeight="Bold"/>
                    <TextBlock Text="(Dev)" Margin="5 0 0 0"
                               Visibility="{x:Bind IsDeveloper,Mode=OneWay}" Opacity="0.5"/>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderControl Grid.ColumnSpan="2"/>

        <Button Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Top"
                Content="Toggle Theme" Margin="10"
                Click="ButtonToggleTheme_Click" />

        <!-- Customer list -->
        <Grid Grid.Row="1" Background="{ThemeResource NavBackgroundBrush}"
              Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10" Command="{x:Bind ViewModel.AddCommand}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="AddFriend"/>
                        <TextBlock Text="Add" Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
                <Button Margin="0 10 10 10" Command="{x:Bind ViewModel.DeleteCommand}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Delete"/>
                        <TextBlock Text="Delete" Margin="5 0 0 0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <ListView Grid.Row="1"
                      ItemsSource="{x:Bind ViewModel.Customers,Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedCustomer,Mode=TwoWay}"
                      ItemTemplate="{StaticResource CustomerDataTemplate}"
                      ScrollViewer.HorizontalScrollMode="Enabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">
            </ListView>
        </Grid>

        <!-- Customer detail -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    Visibility="{x:Bind ViewModel.IsCustomerSelected, Mode=OneWay}"
                    Margin="10">
            <TextBox Header="Firstname"
                     Text="{x:Bind ViewModel.SelectedCustomer.FirstName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Header="Lastname" Margin="0 10 0 0"
                     Text="{x:Bind ViewModel.SelectedCustomer.LastName,Mode=TwoWay}"/>
            <CheckBox Margin="0 20 0 0" IsChecked="{x:Bind ViewModel.SelectedCustomer.IsDeveloper,Mode=TwoWay}">
                Is developer
            </CheckBox>
        </StackPanel>

        <!-- Statusbar -->
        <Border Background="#444" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text=" (c) Wired Brain Coffee" Foreground="White" Margin="5"/>
        </Border>

    </Grid>
</Window>
